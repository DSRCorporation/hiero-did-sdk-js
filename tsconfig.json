{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noLib": false,
    "useUnknownInCatchVariables": false,
    "target": "ES2021",
    "sourceMap": true,
    "allowJs": false,
    "baseUrl": ".",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@hiero-did-sdk/core": ["packages/core/src/index.ts"],
      "@hiero-did-sdk/lifecycle": [
        "packages/lifecycle/src/index.ts"
      ],
      "@hiero-did-sdk/messages": [
        "packages/messages/src/index.ts"
      ],
      "@hiero-did-sdk/publisher-internal": [
        "packages/publisher-internal/src/index.ts"
      ],
      "@hiero-did-sdk/registrar": [
        "packages/registrar/src/index.ts"
      ],
      "@hiero-did-sdk/resolver": [
        "packages/resolver/src/index.ts"
      ],
      "@hiero-did-sdk/signer-internal": [
        "packages/signer-internal/src/index.ts"
      ],
      "@hiero-did-sdk/verifier-internal": [
        "packages/verifier-internal/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts", "tests/**/*.ts", "dist"],
  "ts-node": {
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  }
}
